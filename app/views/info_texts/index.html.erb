<section id="page-content">
  <div class="container">

    <h1>Textos</h1>
    <% if @info_texts.count < 3 %>
      <%= link_to 'Agregar texto informativo', new_info_text_path, class: "btn btn-primary" %>
    <% end %>
    <%= link_to 'Atras', dashboard_path, class: "btn btn-danger" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Titulo</th>
            <th>Contenido</th>
            <th colspan="3"></th>
          </tr>
        </thead>
  
        <tbody>
          <% @info_texts.each do |info_text| %>
            <tr>
              <td><%= info_text.title %></td>
              <td><%= info_text.content %></td>
              <td><%= link_to 'Ver texto', info_text %></td>
              <td><%= link_to 'Editar texto', edit_info_text_path(info_text) %></td>
              <td><%= link_to 'Eliminar texto', info_text, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
      
    <br>
  </div>
</section>

<section id="page-content">
  <div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Cursos</h1>

    <table>
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Contenido</th>
          <th>Tipo</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.name %></td>
            <td><%= course.content %></td>
            <td><%= course.type %></td>
            <td><%= link_to 'Ver curso', course %></td>
            <td><%= link_to 'Editar curso', edit_course_path(course) %></td>
            <td><%= link_to 'Eliminar curso', course, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <% if @courses.count < 3 %>
      <%= link_to 'Agregar curso', new_course_path %>
    <% end %>
    <%= link_to 'Atras', dashboard_path %>
  </div>
</section>

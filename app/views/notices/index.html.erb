<section id="page-content">
  <div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Noticias</h1>

    <table>
      <thead>
        <tr>
          <th>Titulo</th>
          <th>Enlace</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @notices.each do |notice| %>
          <tr>
            <td><%= notice.title %></td>
            <td><%= notice.link %></td>
            <td><%= link_to 'Ver noticia', notice %></td>
            <td><%= link_to 'Editar noticia', edit_notice_path(notice) %></td>
            <td><%= link_to 'Eliminar noticia', notice, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <% if @notices.count < 3 %>
      <%= link_to 'Agregar noticia', new_notice_path %>
    <% end %>
    <%= link_to 'Atras', dashboard_path %>
  </div>
</section>

<section id="page-content">
  <div class="container">

    <h1>Noticias</h1>
    
    <%= link_to 'Agregar noticia', new_notice_path, class: "btn btn-primary" %>
    <%= link_to 'AtrÃ¡s', dashboard_path, class: "btn btn-danger" %>
    
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Titulo</th>
            <th>Enlace</th>
            <th colspan="3"></th>
          </tr>
        </thead>
  
        <tbody>
          <% @notices.each do |notice| %>
            <tr>
              <td><%= notice.title %></td>
              <td><%= notice.link %></td>
